{
  "name": "metokens-erc20-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/metokens/metokens-erc20.git",
  "license": "MIT",
  "scripts": {
    "setup": "node ./scripts/AuthToken.scripts.js",
    "login": "node ./scripts/AuthToken-isLogin.scripts.js",
    "create": "node ./scripts/meToken.scripts.js",
    "test": "truffle test ./test/*",
    "test:rinkeby": "truffle test ./test/* --network rinkeby",
    "start-blank": "rm -rf client/src && cp -rf barebones/src client/",
    "flat:me": "truffle-flattener contracts/meToken.sol > flats/meToken_flat.sol",
    "flat:sme": "truffle-flattener contracts/sMeToken.sol > flats/sMeToken_flat.sol",
    "flat:swap": "truffle-flattener contracts/SwapContract.sol > flats/SwapContract_flat.sol",
    "verify:me": "truffle run verify meToken --network rinkeby --license SPDX-License-Identifier",
    "verify:sme": "truffle run verify sMeToken --network rinkeby --license SPDX-License-Identifier",
    "verify:swap": "truffle run verify SwapContract --network rinkeby --license SPDX-License-Identifier",
    "client": "cd client && npm run start",
    "migrate": "truffle migrate --reset",
    "migrate:rinkeby": "truffle migrate --reset --network rinkeby"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0",
    "@truffle/hdwallet-provider": "^1.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "dotenv": "^8.2.0",
    "eth-block-tracker": "^4.4.3",
    "ethereumjs-tx": "^2.1.2",
    "truffle": "^5.3.1",
    "truffle-flattener": "^1.5.0",
    "truffle-hdwallet-provider-privkey": "^0.3.0",
    "truffle-plugin-verify": "^0.5.7"
  }
}
